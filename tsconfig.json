{
  "compilerOptions": {
    "target": "es5", // Set the JavaScript language version for the output.
    "module": "commonjs", // CommonJS modules are suitable for Node.js environment.
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ], // Include typings for DOM and latest ECMAScript features.
    "outDir": "./dist", // Redirect output structure to the dist folder.
    "rootDir": "./src", // Root directory of your TypeScript files.
    "declaration": true, // Generates corresponding '.d.ts' file for each TypeScript file.
    "declarationMap": true, // Creates sourcemaps for '.d.ts' files.
    "sourceMap": true, // Generates corresponding '.map' file.
    "removeComments": true, // Removes comments in the output files.
    "noEmitOnError": true, // Do not emit outputs if any type checking errors were reported.
    "strict": true, // Enable all strict type-checking options.
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type.
    "moduleResolution": "node", // Resolve modules using Node.js style.
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules.
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts).
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "resolveJsonModule": true, // Include modules imported with .json extension.
    "isolatedModules": true, // Transpile each file as a separate module (similar to 'ts.transpileModule').
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ], // Include all files in the src directory.
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ] // Exclude node_modules, dist, and test directories from compilation.
}
